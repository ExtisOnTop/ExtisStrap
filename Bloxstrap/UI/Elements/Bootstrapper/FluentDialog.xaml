<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Bootstrapper.FluentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vms="clr-namespace:Voidstrap.UI.ViewModels.Bootstrapper"
    Width="505"
    Height="285"
    MinHeight="0"
    d:DataContext="{d:DesignInstance vms:FluentDialogViewModel}"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    Closing="UiWindow_Closing"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    WindowBackdropType="{Binding WindowBackdropType, Mode=OneTime}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <!--  Taskbar Progress Indicator  -->
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding TaskbarProgressState}" ProgressValue="{Binding TaskbarProgressValue}" />
    </Window.TaskbarItemInfo>

    <!--  Main UI Layout  -->
    <Grid Background="{Binding BackgroundColourBrush, Mode=OneTime}">

        <!--  Custom Title Bar  -->
        <ui:TitleBar
            VerticalAlignment="Top"
            CanMaximize="False"
            ShowClose="False"
            ShowMaximize="False"
            ShowMinimize="False" />

        <!--  Version Information  -->
        <TextBlock
            x:Name="VersionTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="{StaticResource Rubik}"
            FontSize="10"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="{Binding VersionText}" />

        <!--  Content Grid  -->
        <Grid Margin="32,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Width="95"
                Height="95"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderOptions.BitmapScalingMode="HighQuality"
                SnapsToDevicePixels="True"
                Source="{Binding Icon}" />


            <!--  Status Message  -->
            <TextBlock
                Grid.Row="1"
                Margin="0,10,0,8"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding Message}"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <!--  Progress Bar  -->
            <ProgressBar
                Grid.Row="2"
                Height="5"
                Margin="10,0,10,16"
                Background="#F0000000"
                IsIndeterminate="{Binding ProgressIndeterminate}"
                Maximum="{Binding ProgressMaximum}"
                Value="{Binding ProgressValue}" />

            <!--  Cancel Button  -->
            <Button
                Grid.Row="3"
                Width="235"
                Padding="6"
                HorizontalAlignment="Center"
                Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                Command="{Binding CancelInstallCommand}"
                Content="{x:Static resources:Strings.Common_Cancel}"
                FontSize="14"
  
                IsEnabled="{Binding CancelEnabled}" Foreground="White" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" />
        </Grid>
    </Grid>

</base:WpfUiWindow>
