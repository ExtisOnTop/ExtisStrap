<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Dialogs.FlagProfilesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:converters="clr-namespace:Voidstrap.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Strings.Dialog_AddFastFlag_Title}"
    Width="565"
    MinHeight="30"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <ui:UiWindow.Resources>
        <converters:RangeConverter x:Key="ValidationConverter" From="0" />
    </ui:UiWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title Bar  -->
        <ui:TitleBar
            Title="{x:Static resources:Strings.Menu_FastFlagEditor_ProfilesDescription}"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="9"
            CanMaximize="False"
            KeyboardNavigation.TabNavigation="None"
            ShowMaximize="False"
            ShowMinimize="False" />

        <!--  TabControl  -->
        <TabControl
            x:Name="Tabs"
            Grid.Row="1"
            Margin="5">
            <TabItem Header="{x:Static resources:Strings.Menu_Save}">
                <Grid Margin="11">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBox x:Name="SaveBackup" Grid.Row="0" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Foreground="DarkGray"
                        IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SaveBackup}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static resources:Strings.Menu_Load}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ListView x:Name="LoadBackup" />
                    <TextBlock
                        Grid.Row="0"
                        Margin="18,14,0,0"
                        Foreground="DarkGray"
                        IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SaveBackup}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Bottom Action Buttons  -->
        <Border
            Grid.Row="2"
            Margin="0,10,0,0"
            Padding="15"
            Background="{ui:ThemeResource SolidBackgroundFillColorSecondaryBrush}">
            <StackPanel
                HorizontalAlignment="Right"
                FlowDirection="LeftToRight"
                Orientation="Horizontal">
                <!--  Clear Flags CheckBox  -->
                <CheckBox
                    Name="ClearFlags"
                    Width="103"
                    Content="{x:Static resources:Strings.Menu_FlagProfiles_ClearFlags}">
                    <CheckBox.Style>
                        <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Tabs, Path=SelectedIndex}" Value="1" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Hidden" />
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!--  Delete Button  -->
                <Button
                    Width="120"
                    MinWidth="100"
                    Margin="0,0,15,0"
                    Background="{DynamicResource SystemAccentBrush}"
                    Click="DeleteButton_Click"
                    Content="{x:Static resources:Strings.Menu_FastFlagEditor_DeleteSelected}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Tabs, Path=SelectedIndex}" Value="1" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Hidden" />
                        </Style>
                    </Button.Style>
                </Button>

                <!--  OK Button  -->
                <Button
                    Width="132"
                    MinWidth="100"
                    Click="OKButton_Click"
                    Content="{x:Static resources:Strings.Common_OK}"
                    Foreground="White">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Tabs, Path=SelectedIndex}" Value="0" />
                                        <Condition Binding="{Binding ElementName=SaveBackup, Path=Text.Length, Converter={StaticResource ValidationConverter}}" Value="True" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="True" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Tabs, Path=SelectedIndex}" Value="1" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="True" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                            <Setter Property="IsEnabled" Value="False" />
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Close Button  -->
                <Button
                    MinWidth="100"
                    Margin="12,0,0,0"
                    Content="Close"
                    Foreground="White"
                    IsCancel="True" />
            </StackPanel>
        </Border>
    </Grid>
</base:WpfUiWindow>