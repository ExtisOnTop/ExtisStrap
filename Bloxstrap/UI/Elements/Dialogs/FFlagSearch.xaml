<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Dialogs.FFlagSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="{x:Static resources:Strings.Dialog_Exception_Title}"
    Width="540"
    MinHeight="0"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Offset="0.00" Color="{DynamicResource WindowBackgroundColorPrimary}"/>
                <GradientStop Offset="0.90" Color="{DynamicResource WindowBackgroundColorSecondary}"/>
                <GradientStop Offset="1.05" Color="{DynamicResource WindowBackgroundColorThird}"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="RootTitleBar"
            Title="Find FFlags"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="8"
            CanMaximize="False"
            KeyboardNavigation.TabNavigation="None"
            ShowMaximize="False"
            ShowMinimize="False"
            Foreground="White" />

        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <RichTextBox
    x:Name="FFlags"
    Margin="0"
    Padding="10"
    Block.LineHeight="2"
    FontFamily="Courier New"
    FontSize="14"
    IsReadOnly="True"
    SelectionBrush="#FFB4B4B4"
    VerticalScrollBarVisibility="Auto"
    Height="400" />
                <controls:MarkdownTextBlock
                    x:Name="HelpMessageMDTextBlock"
                    Margin="0,16,0,0"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
        <Border
            Grid.Row="2"
            Padding="15"
            Background="{DynamicResource PrimaryBackgroundColor}">
            <Grid>
                <TextBlock
                    x:Name="VersionText"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding Version, Mode=OneTime}" />

                <StackPanel
                    HorizontalAlignment="Right"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">
                    <Button
                        x:Name="CloseButton"
                        MinWidth="140"
                        Margin="12,0,0,0"
                        Content="{x:Static resources:Strings.Common_Close}" Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</base:WpfUiWindow>
