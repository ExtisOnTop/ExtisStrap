<Page x:Class="Voidstrap.UI.Elements.Settings.Pages.AIChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Voidstrap.UI.Elements.Settings.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="900"
      Title="AIChatPage">

    <Page.Resources>

        <!-- Placeholder TextBox Style -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4"/>
                            <TextBlock x:Name="Placeholder"
                                       Text="Type your message..."
                                       FontStyle="Italic"
                                       Foreground="Gray"
                                       Padding="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Send Button Style -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Background Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Add Custom Background"
                    Click="AddCustomBackground_Click"
                    Style="{StaticResource SendButtonStyle}"
                    Width="158" Background="{DynamicResource SystemAccentBrush}" />
            <Button Content="Remove Background"
                    Click="RemoveBackground_Click"
                    Style="{StaticResource SendButtonStyle}"
                    Width="158" Background="{DynamicResource SystemAccentBrush}" />
        </StackPanel>

        <!-- Chat Interface -->
        <Border Grid.Row="1" Grid.Column="0"
                x:Name="ChatBorder"
                Background="#59000000"
                Padding="20"
                CornerRadius="6"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Info Text -->
                <TextBlock Grid.Row="0"
                           Text="This feature is in Beta right now. There are barely any commands available at the moment."
                           TextWrapping="Wrap"
                           Foreground="White"
                           FontSize="11"
                           Margin="0,0,0,12"/>

                <!-- Chat Messages -->
                <ScrollViewer Grid.Row="1"
                              Background="#121212"
                              VerticalScrollBarVisibility="Auto"
                              Padding="12">
                    <ItemsControl ItemsSource="{Binding ChatMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2C2C2C"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0 4 0 4">
                                    <TextBlock Text="{Binding}"
                                               TextWrapping="Wrap"
                                               Foreground="White"
                                               FontSize="15"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input Row -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource PlaceholderTextBoxStyle}"/>

                    <Button Grid.Column="1"
                            Content="Send"
                            Command="{Binding SendMessageCommand}"
                            Style="{StaticResource SendButtonStyle}" Background="{DynamicResource SystemAccentBrush}"/>

                    <Button Grid.Column="2"
                            Content="Copy Message"
                            Click="CopyLatestButton_Click"
                            Style="{StaticResource SendButtonStyle}" Background="{DynamicResource SystemAccentBrush}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Commands Box -->
        <Border Grid.Column="1"
                Grid.Row="1"
                Background="#1E1E1E"
                CornerRadius="6"
                Padding="12"
                Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="Available Commands"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <ListBox ItemsSource="{Binding AvailableCommands}"
         Background="#2C2C2C"
         Foreground="White"
         BorderThickness="0"
         Padding="5"
         FontSize="14"
         SelectionMode="Single"
         >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <EventSetter Event="MouseLeftButtonUp" Handler="CommandItem_Click"/>
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Padding" Value="4" />
                            <Setter Property="Margin" Value="0,2,0,2" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="3" >
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Page>
