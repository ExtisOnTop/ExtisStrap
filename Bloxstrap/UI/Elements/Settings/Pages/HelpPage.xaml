<ui:UiPage x:Class="Voidstrap.UI.Elements.Settings.Pages.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Voidstrap.UI.Elements.Settings.Pages"
      xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
      xmlns:resources="clr-namespace:Voidstrap.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HelpPage"
      Scrollable="True">
    <StackPanel>
        <TextBlock Text="Provides info on FFlags - Features." FontSize="13" />

        <Grid Margin="0,8,0,0" Height="578">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- FastFlag Issues -->
            <controls:Expander Grid.Column="0" Margin="0,0,4,0" HeaderIcon="ErrorCircle24" HeaderText="Common FFlag Issues" IsExpanded="True">
                <StackPanel>
                    <controls:MarkdownTextBlock MarkdownText="Gray Avatars" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Blurry Icons Textures" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Laggy Animation" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Frame Stutters" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Lighting Problems" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Gray Sky" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Black Textures" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Rainbow Ui Textures" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Loadding Issues" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="FPS Capped When Uncapped" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Quality Level Not Changing" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="BlackSky" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Roblox Crashing" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="White Sky And White Screen" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Crash on fast camera turn" Margin="0,0,0,4" />
                </StackPanel>
            </controls:Expander>

            <!-- Bootstrapper Issues -->
            <controls:Expander Grid.Column="2" Margin="4,0,0,0" HeaderIcon="AppsAddIn28" HeaderText="Bootstrapper Issues" IsExpanded="True">
                <StackPanel>
                    <controls:MarkdownTextBlock MarkdownText="Discord Rich-Presence Not Working" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Setup Failed" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Connectivity Issue" Margin="0,0,0,4" />
                </StackPanel>
            </controls:Expander>

            <!-- Guide for Fast Flags -->
            <controls:Expander HeaderIcon="ErrorCircle24" HeaderText="Features" IsExpanded="True" Grid.Column="1" Margin="4,0,4,0"  >
                <StackPanel>
                    <controls:MarkdownTextBlock MarkdownText="Recommended Buffering" Margin="0,0,0,4"/>
                    <controls:MarkdownTextBlock MarkdownText="Rendering Modes" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Override Graphic Quality" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Texture Skipping" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Disable Full-Screen TitleBar" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Telemetry" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="ReduceLagSpikes" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="LargeReplicator" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="RCore" Margin="0,0,0,4" />
                    <controls:MarkdownTextBlock MarkdownText="Payload Limit" Margin="0,0,0,4" />
                </StackPanel>
            </controls:Expander>

        </Grid>
    </StackPanel>
</ui:UiPage>