<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Settings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dmodels="clr-namespace:Voidstrap.UI.ViewModels.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Voidstrap.UI.Elements.Settings.Pages"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Strings.Menu_Title}"
    Width="1000"
    Height="580"
    MinWidth="1000"
    d:DataContext="{d:DesignInstance dmodels:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    Closed="WpfUiWindow_Closed"
    Closing="WpfUiWindow_Closing"
    ExtendsContentIntoTitleBar="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Snackbars  -->
        <ui:Snackbar
            x:Name="AlreadyRunningSnackbar"
            Title="{x:Static resources:Strings.Menu_AlreadyRunning_Title}"
            Grid.RowSpan="10"
            Margin="200,0,200,20"
            Panel.ZIndex="10"
            Icon="Info20"
            Message="{x:Static resources:Strings.Menu_AlreadyRunning_Caption}"
            Timeout="10000" />

        <ui:Snackbar
            x:Name="SettingsSavedSnackbar"
            Title="{x:Static resources:Strings.Menu_SettingsSaved_Title}"
            Grid.RowSpan="10"
            Margin="200,0,200,20"
            Panel.ZIndex="9"
            Appearance="Success"
            Icon="CheckboxChecked24"
            Message="{x:Static resources:Strings.Menu_SettingsSaved_Message}"
            Timeout="2000" />

        <ui:Snackbar
            x:Name="SettingsSavedLaunchSnackbar"
            Title="Voidstrap Saved And Launched Roblox!"
            Grid.RowSpan="10"
            Margin="150,0,150,20"
            Panel.ZIndex="10"
            Appearance="Success"
            Icon="CheckboxChecked24"
            Message="Changes have been saved."
            Timeout="2000" />

        <!--  Title Bar  -->
        <ui:TitleBar
            x:Name="RootTitleBar"
            Title="{x:Static resources:Strings.Menu_Title}"
            Grid.Row="0"
            Padding="8"
            ForceShutdown="False"
            Icon="pack://application:,,,/Voidstrap.ico"
            MinimizeToTray="False"
            UseSnapLayout="True" />

        <!--  Main Content Grid  -->
        <Grid
            x:Name="RootGrid"
            Grid.Row="1"
            Margin="12,12,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Navigation Menu  -->
            <ui:NavigationFluent
                x:Name="RootNavigation"
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,12,0"
                Frame="{Binding ElementName=RootFrame}"
                SelectedPageIndex="0">
                <ui:NavigationFluent.Items>
                    
                    
                    <!--  Menu Items  -->
                    <ui:NavigationItem
                        Content="{x:Static resources:Strings.Menu_Integrations_Title}"
                        Foreground="White"
                        Icon="Add12"
                        IconForeground="White"
                        PageType="{x:Type pages:IntegrationsPage}"
                        Tag="integrations">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Deployment Menu Item  -->
                    <ui:NavigationItem
                        Click="NavigationItem_Click"
                        Content="Deployment"
                        Foreground="White"
                        Icon="CloudArchive20"
                        IconForeground="White"
                        PageType="{x:Type pages:ChannelPage}"
                        Tag="channel">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>
                    

                    <!--  Modification Menu Item  -->
                    <ui:NavigationItem
                        Content="Modifications"
                        Foreground="White"
                        Icon="WrenchScrewdriver20"
                        IconForeground="White"
                        PageType="{x:Type pages:ModsPage}"
                        Tag="mods">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Fast Flag Editor Menu Item  -->
                    <ui:NavigationItem
                        Content="FastFlag Editor"
                        Foreground="White"
                        Icon="Flag28"
                        IconForeground="White"
                        PageType="{x:Type pages:FastFlagEditorPage}"
                        Tag="fastflageditor"
                        Visibility="{Binding IsFastFlagEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Fast Flag Settings Menu Item  -->
                    <ui:NavigationItem
                        Content="FastFlag Settings"
                        Foreground="White"
                        Icon="Settings28"
                        IconForeground="White"
                        PageType="{x:Type pages:FastFlagsPage}"
                        Tag="fastflags">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Bootstrapper Menu Item  -->
                    <ui:NavigationItem
                        Content="{x:Static resources:Strings.Menu_Behaviour_Title}"
                        Foreground="White"
                        Icon="PlaySettings20"
                        IconForeground="White"
                        PageType="{x:Type pages:BehaviourPage}"
                        Tag="bootstrapper">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Appreance Menu Item  -->
                    <ui:NavigationItem
                        Content="Appearance"
                        Foreground="White"
                        Icon="PaintBucket24"
                        IconForeground="White"
                        PageType="{x:Type pages:AppearancePage}"
                        Tag="appearance">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>


                    <!--  Shortcuts Menu Item  -->
                    <ui:NavigationItem
                        Click="NavigationItem_Click_1"
                        Content="{x:Static resources:Strings.Common_Shortcuts}"
                        Foreground="White"
                        Icon="Apps32"
                        IconForeground="White"
                        PageType="{x:Type pages:ShortcutsPage}"
                        Tag="shortcuts">
                        <ui:NavigationItem.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="Black" />
                                <GradientStop Offset="1" Color="White" />
                                <GradientStop Offset="0.847" Color="#FFD6D6D6" />
                            </LinearGradientBrush>
                        </ui:NavigationItem.BorderBrush>
                    </ui:NavigationItem>
                </ui:NavigationFluent.Items>

                <!--  Footer Items  -->
                <ui:NavigationFluent.Footer>


                    <ui:NavigationItem
                        Margin="0,0,0,12"
                        Command="{Binding OpenAboutCommand, Mode=OneTime}"
                        Content="{x:Static resources:Strings.Menu_About_Title}"
                        Icon="QuestionCircle48" />
                </ui:NavigationFluent.Footer>
            </ui:NavigationFluent>

            <!--  Content Area  -->
            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:Breadcrumb
                    Grid.Row="0"
                    Margin="0,0,0,5"
                    Navigation="{Binding ElementName=RootNavigation}" />
                <Frame x:Name="RootFrame" Grid.Row="1" />
            </Grid>
        </Grid>

        <!--  Status Bar  -->
        <StatusBar
            x:Name="RootStatusBar"
            Grid.Row="2"
            Height="55"
            Padding="14,8"
            BorderThickness="0,1.4,0,0">
            <StatusBar.Background>
                <SolidColorBrush Opacity="0.45" Color="{ui:ThemeResource ApplicationBackgroundColor}" />
            </StatusBar.Background>

            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <!--  Test Mode Toggle  -->
            <StatusBarItem Grid.Column="0" Margin="0,0,4,0">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:ToggleSwitch
                        Background="{DynamicResource SystemAccentBrush}"
                        Foreground="{DynamicResource SystemAccentBrush}"
                        IsChecked="{Binding TestModeEnabled, Mode=TwoWay}" />
                    <TextBlock
                        Padding="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="{x:Static resources:Strings.Menu_TestMode}" />
                </StackPanel>
            </StatusBarItem>

            <!--  Launch Roblox Button  -->
            <StatusBarItem Grid.Column="2" Padding="0,0,8,0">
                <ui:Button
                    Width="140"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Appearance="Primary"
                    Background="{DynamicResource SystemAccentBrush}"
                    Click="Button_Click"
                    Command="{Binding SaveAndLaunchSettingsCommand, Mode=OneWay}"
                    Content="Launch Roblox"
                    Foreground="White" />
            </StatusBarItem>

            <!--  Save Button  -->
            <StatusBarItem Grid.Column="3" Padding="0,0,9,0">
                <ui:Button
                    Width="80"
                    Appearance="Primary"
                    Background="{DynamicResource SystemAccentBrush}"
                    Click="Button_Click_1"
                    Command="{Binding SaveSettingsCommand, Mode=OneWay}"
                    Content="{x:Static resources:Strings.Menu_Save}"
                    Foreground="White" />
            </StatusBarItem>

            <!--  Close Button  -->
            <StatusBarItem Grid.Column="4" Padding="0,0,8,0">
                <ui:Button
                    Width="80"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Appearance="Secondary"
                    Command="{Binding CloseWindowCommand, Mode=OneTime}"
                    Content="{x:Static resources:Strings.Common_Close}"
                    Foreground="White" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</base:WpfUiWindow>
